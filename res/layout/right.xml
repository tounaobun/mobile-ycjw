<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/bg_color_deep" >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" >

        <include
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/title"
            layout="@layout/line" >
        </include>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="#444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:layout_marginBottom="36dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#CC3300"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="策划:小李"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/planner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ttt" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:background="@drawable/ic_course_bg_lan"
            android:padding="8dp"
            android:text="©2014 FinalWork Studio"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/ic_course_bg_tao"
            android:padding="8dp"
            android:text="联系我们:tounaobun@gmail.com"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/about_us_gear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:src="@drawable/gear2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_toLeftOf="@+id/title"
            android:background="@drawable/ic_course_bg_lv"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="程序:小文"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_toRightOf="@+id/title"
            android:background="@drawable/ic_course_bg_huang"
            android:padding="8dp"
            android:text="美术:小骏"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>